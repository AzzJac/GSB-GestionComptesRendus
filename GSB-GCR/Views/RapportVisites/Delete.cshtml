@model GSB_GCR.Models.RapportVisite

@{
    ViewData["Title"] = "Delete";
}

<h1>Supprimer</h1>

<h3>Êtes-vous sûr de supprimer ceci ?</h3>
<div>
    <h4>RapportVisite</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.Label("Date")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RapDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.Label("Bilan")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RapBilan)
        </dd>
        <dt class = "col-sm-2">
            @Html.Label("Motif")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RapMotif)
        </dd>
        <dt class = "col-sm-2">
            @Html.Label("Nom praticien")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PraNumNavigation.PraNom)
        </dd>
        <dt class = "col-sm-2">
            @Html.Label("Nom visiteur")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VisMatriculeNavigation.VisNom)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="VisMatricule" />
        <input type="hidden" asp-for="RapNum" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Revenir à la liste</a>
    </form>
</div>
