@model IEnumerable<GSB_GCR.Models.Visiteur>

@{
    ViewData["Title"] = "Index";
}

<h1>Liste des visiteurs</h1>

<p>
    <a asp-action="Create" type="button" class="btn btn-primary">Nouveau visiteur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.Label("Nom")
            </th>
            <th>
                @Html.Label("Prenom")
            </th>
            <th>
                @Html.Label("Adresse")
            </th>
            <th>
                @Html.Label("Code postal")
            </th>
            <th>
                @Html.Label("Ville")
            </th>
            <th>
                @Html.Label("Date embauche")
            </th>
            <th>
                @Html.Label("Laboratoire")
            </th>
            <th>
                @Html.Label("Section")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VisNom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VisPrenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VisAdresse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VisCp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VisVille)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VisDateembauche)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.LabCodeNavigation.LabNom)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.SecCodeNavigation.SecLibelle)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VisMatricule">Modifier</a> |
                    <a asp-action="Details" asp-route-id="@item.VisMatricule">Détails</a> |
                <a asp-action="Delete" asp-route-id="@item.VisMatricule">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
