@model GSB_GCR.Models.Famille

@{
    ViewData["Title"] = "Edit";
}

<h1>Modifier</h1>

<h4>Famille</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FamCode" />
            <div class="form-group">
                <label asp-for="FamLibelle" class="control-label"></label>
                <input asp-for="FamLibelle" class="form-control" />
                <span asp-validation-for="FamLibelle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</br>
<div>
    <a asp-action="Index" class="btn btn-primary">Revenir à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
